@import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');

*{
    margin: 0;
    padding:0;
    box-sizing:border-box;
    font-family: 'Poppins', sans-serif;
}
body{
    height: 100vh;
    display: flex;
    background-color :white;
    justify-content: center;
    align-items: center;
    padding: 10px;
    
}

.card{
    max-width: 900px;
    width: 100%;
    height: 100%;
    background-color: #000137;
    padding: 25px 30px;
    border-radius: 15px;
    /*justify-content: center;*/
    color: white;
}

.card .title h1{
    font-size: 50px;
    font-weight: 500;
    margin-left: 190px;
}


.card .photo{
    
    margin-left: 290px;
    border-radius: 30px;
    width:300px;
    height: 300px;
    padding: 20px;
}

.card .content {
    text-align: center;
    line-height: 1.6;  
}