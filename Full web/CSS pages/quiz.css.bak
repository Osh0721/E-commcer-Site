@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap');

*{
  font-family: 'Poppins',sans-serif;
}

::-webkit-scrollbar{display:none;}

#body{
  min-height: 100vh;
  width: 100%;
  background-position: center;
  background-size: cover;
  position: relative;
  font-family: 'Poppins', sans-serif;
}

.start-quiz {
  max-width: 1000px;
  height: 400px;
  margin: 40px auto;
  padding: 100px;
  border-radius: 40px;
  background-color: #e3f2fa;
  
}

.start-quiz h3 {
  font-size: 50px;
  color: #051367;
  font-weight: 600;
  margin-bottom: 15px;
  line-height: 25px;
  text-align: center;
  
}

.start-quiz p {
  font-size: 20px;
  color: #000000;
  font-weight: 600;
  margin-bottom: 10px;
  line-height: 22px;
  text-align: center;
  line-height: 1.3;
}

.start-quiz p span {
  font-weight: 600;
}

.start-quiz .btn {
  margin-top: 20px;
  margin-left: 410px;
}

.btn{
  padding: 16px 47px;
  background-color: #051367;
  color: #ffffff;
  border: none;
  font-size: 16px;
  border-radius: 10px;
  cursor:pointer;
}

.q-box{
  max-width: 700px;
  background-color: #e3f2fa;
  margin: 40px auto;
  padding: 30px;
  border-radius: 20px;
}

.q-box .Q-number{
  font-size: 19px;
  color: black;
  font-weight: 800;
  border-bottom: 1px solid #cccccc;
  padding-bottom: 10px;
  line-height: 25px;
  text-align: center;
}

.q-box .Question {
  font-size: 22px;
  color: #000000;
  line-height: 28px;
  padding: 20px 0;
  margin: 0;
  font-weight: 400;
}

.q-box .btn {
  /*margin-right: 20px;*/
  margin-left: 290px;
  
}
